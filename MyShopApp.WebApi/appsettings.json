{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Urls": "http://192.168.1.78:5205",

  "ConnectionStrings": {
    "Default": "Server=127.0.0.1;User Id=postgres;Password=123qwe;Port=5432;Database=myshopapp;"
  },

  "Serilog": {
    "Using": [
      "Serilog.Exceptions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.ndjson",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval": "Hour",
          "retainedFileCountLimit": 1,
          "shared": false,
          "hooks": "MyShopApp.WebApi.Logging.SerilogHooks::ArchiveHooks, MyShopApp.WebApi"
        }
      }
    ],
    "Properties": {
      "Application": "MyShopApp"
    }
  }
}
